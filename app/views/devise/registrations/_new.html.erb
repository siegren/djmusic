<div class="form-group">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <%= f.email_field :email, autofocus: true, class: 'form-control fm-bottom', placeholder: 'Email Address' %>

    <%= f.text_field :firstname, class: 'form-control fm-bottom', placeholder: 'First Name' %>

    <%= f.text_field :lastname, class: 'form-control fm-bottom', placeholder: 'Last Name' %>




    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control fm-bottom fm-bottom', placeholder: 'Password' %>




    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control fm-bottom', placeholder: 'Password Confirmation' %>


    <%= f.submit "Sign up", class: 'btn-primary form-control' %>

<% end %>
</div>


