<div class="container">
	<div class="row">
		<div class="col-lg-12">
		<h2>Lyrics 	<div style="width: 90px" class="pull-right"><%= button_to 'My Audio', melodist_audio_dashboard_path, class: 'pull-right btn-primary form-control'%></div></h2>
			<% if @lyrics.count == 0 %>
				<p>No published composition yet!</p>
			<% else %>
				<table class="table table-hover">
				    <thead>
				      <tr>
				        <th>Title</th>
				        <th>Controls</th>
					      </tr>
				    </thead>
				    <tbody>
				    <% @lyrics.each do |l| %>
				      <tr>
				      	<td><%= link_to l.title, audio_path(:lyric_id => l.id) %></td>
				        <td style="width: 15%"><%= link_to 'Add Audio', new_melody_path(:lyric_id => l.id, :user_id => current_user.id) %> </td>
				      </tr>
				    <% end %>
				    </tbody>
				  </table>
			<% end %>
		</div>
	</div>
</div>