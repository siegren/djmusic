<p id="notice"><%= notice %></p>

<h1>Melodies</h1>

<table>
  <thead>
    <tr>
      <th>Lyric</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @melodies.each do |melody| %>
      <tr>
        <td>
                <audio controls>
          <source src="<%= melody.sound.url %>" type="audio/mpeg">
        Your browser does not support the audio element.
        </audio>
        </td>
        <td><%= melody.lyric %></td>
        <td><%= melody.user %></td>
        <td><%= link_to 'Show', melody %></td>
        <td><%= link_to 'Edit', edit_melody_path(melody) %></td>
        <td><%= link_to 'Destroy', melody, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Melody', new_melody_path %>
